<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bird Index</title>
</head>
<body>
    <%- include('../partials/userview.ejs') %>
    <h1>Collection of all the birds in the index</h1>
    <% if (user.isAdmin === true) {%>
        <a href="/birdapp/newbird">Add Bird</a>
    <% } else { %>
        <a href="/birdapp/newbird">Request Bird</a>
    <% } %>
    <div class="birdsBox">
        <% birds.forEach((bird) => { %>
            <% if (bird.isApproved === true) {%>
                <div class="birdCard">
                    <h2><a href="/birdapp/birddetails/<%=bird.id%>"><%= bird.name %></a></h2>
                    <p>Continent(s): <%= bird.continent.join(", ") %></p>
                    <p>Habitat(s): <%= bird.habitat.join(", ") %></p>
                    <p>Diet: <%= bird.diet.join(", ") %></p>
                    <p>Color: <%= bird.color%></p> <!--FUNCTION MAKE A BOX THAT DISPLAYS THE HEXADECIMAL COLOR, NOT THE STRING-->
                    <p>Wingspan: <%= bird.wingspan %>cm</p>
                    <% if (bird.isNocturnal === true) { %>
                        <p>Nocturnal? Yes</p>
                    <% } else { %>
                        <p>Nocturnal? No</p>
                    <% } %>
                    <% if (user.isAdmin === true) {%>
                    <a href="/birdapp/birds/<%= bird._id%>/edit">Edit <%= bird.name%></a>
                    <form action="/birdapp/birds/<%=bird._id%>?_method=DELETE" method="POST">
                        <button type="submit">Delete <%=bird.name%> from index</button>
                    </form>
                    <% } %>
                </div>
            <% }%>
        <% }) %>
    </div>
</body>
</html>