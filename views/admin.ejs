<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Page</title>
</head>
<body>
    <%- include('./partials/userview.ejs') %>
    <h1>Administrator page</h1>
    <h2>Users</h2>
    <div class="adminBox">
        <% for (let user of users) { %>
            <h3><%=user.username%></h3>
            <p>Current Bird Collection: <%=user.birdCollection.length%></p>
            <p>Admin? <%=user.isAdmin%></p>
            <form action="/admin/<%=user.id%>?_method=DELETE" method="POST">
                <button type="submit">Delete <%=user.username%> from index</button>
            </form>
        <% } %>
    </div>
    <h2>Bird Requests</h2>
    <div class="birdsBox">
        <% birdReq.forEach((bird) => { %>
            <% if (bird.isApproved === false) { %>
                <div class="birdCard">
                    <h2><%= bird.name %></h2>
                    <p>Requester: <%= bird.requester.username %></p>
                    <p>Continent(s): <%= bird.continent.join(", ") %></p>
                    <p>Habitat(s): <%= bird.habitat.join(", ") %></p>
                    <p>Diet: <%= bird.diet.join(", ") %></p>
                    <p>Color: <%= bird.color%></p> <!--FUNCTION MAKE A BOX THAT DISPLAYS THE HEXADECIMAL COLOR, NOT THE STRING-->
                    <p>Wingspan: <%= bird.wingspan %>cm</p>
                    <% if (bird.isNocturnal === true) { %>
                        <p>Nocturnal? Yes</p>
                    <% } else { %>
                        <p>Nocturnal? No</p>
                    <% } %>
                    <form action="/admin/<%=bird._id%>?_method=PUT" method="POST">
                    <label for="isApproved">Check for Approval:</label>
                    <input type="checkbox" name="isApproved" id="isApproved"/>
                        <button type="submit">Approve or deny <%=bird.name%> request</button>
                    </form>
                </div>
            <% } %>
        <% }) %>
    </div>
</body>
</html>